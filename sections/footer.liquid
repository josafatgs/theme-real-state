{{ 'section-footer.css' | asset_url | stylesheet_tag }}

<footer class="footer" role="contentinfo">
  <div class="footer__container">
    <!-- Main Footer Content -->
    <div class="footer__main">
      <!-- Company Info -->
      <div class="footer__section footer__section--company">
        <div class="footer__logo">
          {%- if settings.logo != blank -%}
            <img src="{{ settings.logo | image_url: width: 180 }}" 
                 alt="{{ shop.name }}" 
                 class="footer__logo-img"
                 width="180"
                 height="auto">
          {%- else -%}
            <h3 class="footer__logo-text">{{ shop.name }}</h3>
          {%- endif -%}
        </div>
        
        {%- if section.settings.company_description != blank -%}
          <p class="footer__description">{{ section.settings.company_description }}</p>
        {%- endif -%}

        <!-- Social Links -->
        {%- if section.settings.show_social_links -%}
          <div class="footer__social">
            <h4 class="footer__social-title">Síguenos</h4>
            <div class="footer__social-links">
              {%- if section.settings.facebook_url != blank -%}
                <a href="{{ section.settings.facebook_url }}" 
                   target="_blank" 
                   rel="noopener noreferrer"
                   class="footer__social-link"
                   aria-label="Síguenos en Facebook">
                  <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
                    <path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                  </svg>
                </a>
              {%- endif -%}
              
              {%- if section.settings.instagram_url != blank -%}
                <a href="{{ section.settings.instagram_url }}" 
                   target="_blank" 
                   rel="noopener noreferrer"
                   class="footer__social-link"
                   aria-label="Síguenos en Instagram">
                  <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
                    <rect x="2" y="2" width="20" height="20" rx="5" ry="5" stroke="currentColor" stroke-width="2"/>
                    <path d="m16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z" stroke="currentColor" stroke-width="2"/>
                    <line x1="17.5" y1="6.5" x2="17.51" y2="6.5" stroke="currentColor" stroke-width="2"/>
                  </svg>
                </a>
              {%- endif -%}
              
              {%- if section.settings.youtube_url != blank -%}
                <a href="{{ section.settings.youtube_url }}" 
                   target="_blank" 
                   rel="noopener noreferrer"
                   class="footer__social-link"
                   aria-label="Síguenos en YouTube">
                  <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
                    <path d="M22.54 6.42a2.78 2.78 0 0 0-1.94-2C18.88 4 12 4 12 4s-6.88 0-8.6.46a2.78 2.78 0 0 0-1.94 2A29 29 0 0 0 1 11.75a29 29 0 0 0 .46 5.33A2.78 2.78 0 0 0 3.4 19c1.72.46 8.6.46 8.6.46s6.88 0 8.6-.46a2.78 2.78 0 0 0 1.94-2 29 29 0 0 0 .46-5.25 29 29 0 0 0-.46-5.33z" stroke="currentColor" stroke-width="2"/>
                    <polygon points="9.75,15.02 15.5,11.75 9.75,8.48" fill="currentColor"/>
                  </svg>
                </a>
              {%- endif -%}
            </div>
          </div>
        {%- endif -%}
      </div>

      <!-- Quick Links -->
      <div class="footer__section footer__section--links">
        <h4 class="footer__section-title">Enlaces Rápidos</h4>
        <ul class="footer__links">
          <li><a href="{{ routes.root_url }}" class="footer__link">Inicio</a></li>
          <li><a href="{{ collections.propiedades.url | default: '/collections/propiedades' }}" class="footer__link">Propiedades</a></li>
          <li><a href="{{ collections.casas.url | default: '/collections/casas' }}" class="footer__link">Casas</a></li>
          <li><a href="{{ collections.departamentos.url | default: '/collections/departamentos' }}" class="footer__link">Departamentos</a></li>
          <li><a href="{{ collections.terrenos.url | default: '/collections/terrenos' }}" class="footer__link">Terrenos</a></li>
          <li><a href="#contact-form" class="footer__link">Contacto</a></li>
        </ul>
      </div>

      <!-- Services -->
      <div class="footer__section footer__section--services">
        <h4 class="footer__section-title">Servicios</h4>
        <ul class="footer__links">
          <li><span class="footer__service">Compra de Propiedades</span></li>
          <li><span class="footer__service">Venta de Propiedades</span></li>
          <li><span class="footer__service">Asesoría Inmobiliaria</span></li>
          <li><span class="footer__service">Evaluación de Propiedades</span></li>
          <li><span class="footer__service">Financiamiento</span></li>
          <li><span class="footer__service">Trámites Legales</span></li>
        </ul>
      </div>

      <!-- Contact Info -->
      <div class="footer__section footer__section--contact">
        <h4 class="footer__section-title">Contacto</h4>
        <div class="footer__contact-info">
          {%- if section.settings.address != blank -%}
            <div class="footer__contact-item">
              <svg class="footer__contact-icon" width="20" height="20" viewBox="0 0 24 24" fill="none">
                <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z" stroke="currentColor" stroke-width="2"/>
                <circle cx="12" cy="10" r="3" stroke="currentColor" stroke-width="2"/>
              </svg>
              <span>{{ section.settings.address }}</span>
            </div>
          {%- endif -%}
          
          {%- if section.settings.phone_number != blank -%}
            <div class="footer__contact-item">
              <svg class="footer__contact-icon" width="20" height="20" viewBox="0 0 24 24" fill="none">
                <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
              </svg>
              <a href="tel:{{ section.settings.phone_number }}" class="footer__contact-link">
                {{ section.settings.phone_number }}
              </a>
            </div>
          {%- endif -%}
          
          {%- if section.settings.email != blank -%}
            <div class="footer__contact-item">
              <svg class="footer__contact-icon" width="20" height="20" viewBox="0 0 24 24" fill="none">
                <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z" stroke="currentColor" stroke-width="2"/>
                <polyline points="22,6 12,13 2,6" stroke="currentColor" stroke-width="2"/>
              </svg>
              <a href="mailto:{{ section.settings.email }}" class="footer__contact-link">
                {{ section.settings.email }}
              </a>
            </div>
          {%- endif -%}
          
          {%- if section.settings.business_hours != blank -%}
            <div class="footer__contact-item">
              <svg class="footer__contact-icon" width="20" height="20" viewBox="0 0 24 24" fill="none">
                <circle cx="12" cy="12" r="10" stroke="currentColor" stroke-width="2"/>
                <polyline points="12,6 12,12 16,14" stroke="currentColor" stroke-width="2"/>
              </svg>
              <span>{{ section.settings.business_hours }}</span>
            </div>
          {%- endif -%}
        </div>

        <!-- WhatsApp Contact Button -->
        {%- if section.settings.whatsapp_number != blank -%}
          <a href="https://wa.me/{{ section.settings.whatsapp_number }}?text={{ section.settings.whatsapp_message | url_encode }}" 
             target="_blank" 
             rel="noopener noreferrer"
             class="footer__whatsapp-btn">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none">
              <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893A11.821 11.821 0 0020.885 3.488" fill="currentColor"/>
            </svg>
            Contactar por WhatsApp
          </a>
        {%- endif -%}
      </div>
    </div>

    <!-- Footer Bottom -->
    <div class="footer__bottom">
      <div class="footer__bottom-content">
        <div class="footer__copyright">
          <p>&copy; {{ 'now' | date: '%Y' }} {{ shop.name }}. Todos los derechos reservados.</p>
        </div>
        
        <div class="footer__legal">
          <a href="/pages/privacy-policy" class="footer__legal-link">Política de Privacidad</a>
          <span class="footer__legal-separator">|</span>
          <a href="/pages/terms-of-service" class="footer__legal-link">Términos de Servicio</a>
        </div>
      </div>
    </div>
  </div>
</footer>

{% schema %}
{
  "name": "Footer",
  "settings": [
    {
      "type": "header",
      "content": "Información de la empresa"
    },
    {
      "type": "textarea",
      "id": "company_description",
      "label": "Descripción de la empresa",
      "default": "Somos una empresa inmobiliaria comprometida con ayudarte a encontrar la propiedad perfecta para ti y tu familia."
    },
    {
      "type": "header",
      "content": "Información de contacto"
    },
    {
      "type": "text",
      "id": "address",
      "label": "Dirección",
      "default": "Av. Principal 123, Colonia Centro, Ciudad, CP 12345"
    },
    {
      "type": "text",
      "id": "phone_number",
      "label": "Número de teléfono",
      "default": "+52 123 456 7890"
    },
    {
      "type": "text",
      "id": "email",
      "label": "Correo electrónico",
      "default": "contacto@inmobiliaria.com"
    },
    {
      "type": "text",
      "id": "business_hours",
      "label": "Horarios de atención",
      "default": "Lun - Vie: 9:00 AM - 6:00 PM"
    },
    {
      "type": "text",
      "id": "whatsapp_number",
      "label": "Número de WhatsApp",
      "info": "Solo números, ejemplo: 5212345678901"
    },
    {
      "type": "text",
      "id": "whatsapp_message",
      "label": "Mensaje predeterminado de WhatsApp",
      "default": "Hola, me interesa obtener más información sobre sus propiedades."
    },
    {
      "type": "header",
      "content": "Redes sociales"
    },
    {
      "type": "checkbox",
      "id": "show_social_links",
      "label": "Mostrar enlaces de redes sociales",
      "default": true
    },
    {
      "type": "url",
      "id": "facebook_url",
      "label": "URL de Facebook"
    },
    {
      "type": "url",
      "id": "instagram_url",
      "label": "URL de Instagram"
    },
    {
      "type": "url",
      "id": "youtube_url",
      "label": "URL de YouTube"
    }
  ]
}
{% endschema %}