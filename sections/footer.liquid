                    <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                  </svg>
                </a>
              {%- endif -%}
            </div>
          </div>
        {%- endif -%}
      </div>

      <!-- Navigation Links Column -->
      {%- if section.settings.show_navigation_links -%}
        <div class="footer__column footer__column--navigation">
          <h4 class="footer__column-title">{{ section.settings.navigation_title | default: 'Navegación' }}</h4>
          <ul class="footer__links">
            {%- for block in section.blocks -%}
              {%- case block.type -%}
                {%- when 'navigation_link' -%}
                  <li class="footer__link-item">
                    <a href="{{ block.settings.link }}" class="footer__link">
                      {{ block.settings.label }}
                    </a>
                  </li>
              {%- endcase -%}
            {%- endfor -%}
            
            {%- comment -%} Default links if no blocks are added {%- endcomment -%}
            {%- if section.blocks.size == 0 -%}
              <li class="footer__link-item">
                <a href="{{ routes.root_url }}" class="footer__link">Inicio</a>
              </li>
              <li class="footer__link-item">
                <a href="{{ collections.propiedades.url | default: '/collections/propiedades' }}" class="footer__link">Propiedades</a>
              </li>
              <li class="footer__link-item">
                <a href="{{ collections.casas.url | default: '/collections/casas' }}" class="footer__link">Casas</a>
              </li>
              <li class="footer__link-item">
                <a href="{{ collections.departamentos.url | default: '/collections/departamentos' }}" class="footer__link">Departamentos</a>
              </li>
              <li class="footer__link-item">
                <a href="{{ collections.terrenos.url | default: '/collections/terrenos' }}" class="footer__link">Terrenos</a>
              </li>
            {%- endif -%}
          </ul>
        </div>
      {%- endif -%}

      <!-- Services Column -->
      {%- if section.settings.show_services -%}
        <div class="footer__column footer__column--services">
          <h4 class="footer__column-title">{{ section.settings.services_title | default: 'Servicios' }}</h4>
          <ul class="footer__links">
            {%- for block in section.blocks -%}
              {%- case block.type -%}
                {%- when 'service_item' -%}
                  <li class="footer__link-item">
                    {%- if block.settings.service_link != blank -%}
                      <a href="{{ block.settings.service_link }}" class="footer__link">
                        {{ block.settings.service_name }}
                      </a>
                    {%- else -%}
                      <span class="footer__service">{{ block.settings.service_name }}</span>
                    {%- endif -%}
                  </li>
              {%- endcase -%}
            {%- endfor -%}
            
            {%- comment -%} Default services if no blocks are added {%- endcomment -%}
            {%- if section.blocks.size == 0 -%}
              <li class="footer__link-item">
                <span class="footer__service">Compra de Propiedades</span>
              </li>
              <li class="footer__link-item">
                <span class="footer__service">Venta de Propiedades</span>
              </li>
              <li class="footer__link-item">
                <span class="footer__service">Asesoría Inmobiliaria</span>
              </li>
              <li class="footer__link-item">
                <span class="footer__service">Evaluación de Propiedades</span>
              </li>
            {%- endif -%}
          </ul>
        </div>
      {%- endif -%}

      <!-- Contact Info Column -->
      <div class="footer__column footer__column--contact">
        <h4 class="footer__column-title">{{ section.settings.contact_title | default: 'Contacto' }}</h4>
        <div class="footer__contact-info">
          {%- if section.settings.address != blank -%}
            <div class="footer__contact-item">
              <svg class="footer__contact-icon" width="18" height="18" viewBox="0 0 24 24" fill="none">
                <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z" stroke="currentColor" stroke-width="2"/>
                <circle cx="12" cy="10" r="3" stroke="currentColor" stroke-width="2"/>
              </svg>
              <span class="footer__contact-text">{{ section.settings.address }}</span>
            </div>
          {%- endif -%}
          
          {%- if section.settings.phone_number != blank -%}
            <div class="footer__contact-item">
              <svg class="footer__contact-icon" width="18" height="18" viewBox="0 0 24 24" fill="none">
                <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
              </svg>
              <a href="tel:{{ section.settings.phone_number }}" class="footer__contact-link">
                {{ section.settings.phone_number }}
              </a>
            </div>
          {%- endif -%}
          
          {%- if section.settings.email != blank -%}
            <div class="footer__contact-item">
              <svg class="footer__contact-icon" width="18" height="18" viewBox="0 0 24 24" fill="none">
                <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z" stroke="currentColor" stroke-width="2"/>
                <polyline points="22,6 12,13 2,6" stroke="currentColor" stroke-width="2"/>
              </svg>
              <a href="mailto:{{ section.settings.email }}" class="footer__contact-link">
                {{ section.settings.email }}
              </a>
            </div>
          {%- endif -%}
          
          {%- if section.settings.business_hours != blank -%}
            <div class="footer__contact-item">
              <svg class="footer__contact-icon" width="18" height="18" viewBox="0 0 24 24" fill="none">
                <circle cx="12" cy="12" r="10" stroke="currentColor" stroke-width="2"/>
                <polyline points="12,6 12,12 16,14" stroke="currentColor" stroke-width="2"/>
              </svg>
              <span class="footer__contact-text">{{ section.settings.business_hours }}</span>
            </div>
          {%- endif -%}
        </div>

        <!-- WhatsApp Contact Button -->
        {%- if section.settings.whatsapp_number != blank -%}
          <a href="https://wa.me/{{ section.settings.whatsapp_number }}?text={{ section.settings.whatsapp_message | url_encode }}" 
             target="_blank" 
             rel="noopener noreferrer"
             class="footer__whatsapp-btn">
            <svg width="18" height="18" viewBox="0 0 24 24" fill="currentColor">
              <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893A11.821 11.821 0 0020.885 3.488"/>
            </svg>
            <span>Contactar por WhatsApp</span>
          </a>
        {%- endif -%}
      </div>
    </div>

    <!-- Footer Bottom -->
    <div class="footer__bottom">
      <div class="footer__bottom-content">
        <div class="footer__copyright">
          <p>&copy; {{ 'now' | date: '%Y' }} {{ shop.name }}. {{ section.settings.copyright_text | default: 'Todos los derechos reservados.' }}</p>
        </div>
        
        {%- if section.settings.show_legal_links -%}
          <div class="footer__legal">
            {%- if section.settings.privacy_policy_url != blank -%}
              <a href="{{ section.settings.privacy_policy_url }}" class="footer__legal-link">
                {{ section.settings.privacy_policy_text | default: 'Política de Privacidad' }}
              </a>
            {%- endif -%}
            
            {%- if section.settings.privacy_policy_url != blank and section.settings.terms_of_service_url != blank -%}
              <span class="footer__legal-separator">|</span>
            {%- endif -%}
            
            {%- if section.settings.terms_of_service_url != blank -%}
              <a href="{{ section.settings.terms_of_service_url }}" class="footer__legal-link">
                {{ section.settings.terms_of_service_text | default: 'Términos de Servicio' }}
              </a>
            {%- endif -%}
          </div>
        {%- endif -%}
      </div>
    </div>
  </div>
</footer>

