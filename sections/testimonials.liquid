<section class="testimonials" id="testimonials">
  <div class="container">
    <h2 class="testimonials__title">{{ settings.testimonials_title | default: 'Lo que dicen nuestros clientes' }}</h2>
    <p class="testimonials__subtitle">{{ settings.testimonials_subtitle | default: 'Conoce las experiencias de quienes ya encontraron su hogar con nosotros' }}</p>

    <div class="testimonials__grid">
      <div class="testimonial-card">
        <div class="testimonial-card__rating">
          <span class="star">★</span>
          <span class="star">★</span>
          <span class="star">★</span>
          <span class="star">★</span>
          <span class="star">★</span>
        </div>
        <p class="testimonial-card__text">{{ settings.testimonial_1_text | default: 'Excelente servicio, me ayudaron a encontrar la casa perfecta para mi familia.' }}</p>
        <div class="testimonial-card__author">
          <strong>{{ settings.testimonial_1_author | default: 'María González' }}</strong>
          <span>{{ settings.testimonial_1_location | default: 'Zona Norte' }}</span>
        </div>
      </div>
      
      <div class="testimonial-card">
        <div class="testimonial-card__rating">
          <span class="star">★</span>
          <span class="star">★</span>
          <span class="star">★</span>
          <span class="star">★</span>
          <span class="star">★</span>
        </div>
        <p class="testimonial-card__text">{{ settings.testimonial_2_text | default: 'Vendí mi propiedad rápidamente y al mejor precio. El equipo es muy confiable.' }}</p>
        <div class="testimonial-card__author">
          <strong>{{ settings.testimonial_2_author | default: 'Carlos Rodríguez' }}</strong>
          <span>{{ settings.testimonial_2_location | default: 'Centro' }}</span>
        </div>
      </div>
      
      <div class="testimonial-card">
        <div class="testimonial-card__rating">
          <span class="star">★</span>
          <span class="star">★</span>
          <span class="star">★</span>
          <span class="star">★</span>
          <span class="star">★</span>
        </div>
        <p class="testimonial-card__text">{{ settings.testimonial_3_text | default: 'Compramos nuestro primer departamento con su ayuda. Nos explicaron todo paso a paso.' }}</p>
        <div class="testimonial-card__author">
          <strong>{{ settings.testimonial_3_author | default: 'Ana y Roberto Martínez' }}</strong>
          <span>{{ settings.testimonial_3_location | default: 'Zona Sur' }}</span>
        </div>
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Testimonials",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Testimonials"
    }
  ]
}
{% endschema %}