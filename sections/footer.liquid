<footer class="footer" role="contentinfo">
  <div class="footer__container">
    <!-- Main Footer Content -->
    <div class="footer__main">
      <!-- Company Info Column -->
      <div class="footer__column footer__column--company">
        <div class="footer__logo">
          {%- if settings.logo != blank -%}
            <img src="{{ settings.logo | image_url: width: 160 }}" 
                 alt="{{ shop.name }}" 
                 class="footer__logo-img"
                 width="160"
                 height="auto"
                 loading="lazy">
          {%- else -%}
            <h3 class="footer__logo-text">{{ shop.name }}</h3>
          {%- endif -%}
        </div>
        
        {%- if section.settings.company_description != blank -%}
          <p class="footer__description">{{ section.settings.company_description }}</p>
        {%- endif -%}

        <!-- Social Links -->
        {%- if section.settings.show_social_links -%}
          <div class="footer__social">
            <h4 class="footer__social-title">Síguenos</h4>
            <div class="footer__social-links">
              {%- if section.settings.facebook_url != blank -%}
                <a href="{{ section.settings.facebook_url }}" 
                   target="_blank" 
                   rel="noopener noreferrer"
                   class="footer__social-link"
                   aria-label="Síguenos en Facebook">
                  <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                    <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
                  </svg>
                </a>
              {%- endif -%}
              
              {%- if section.settings.instagram_url != blank -%}
                <a href="{{ section.settings.instagram_url }}" 
                   target="_blank" 
                   rel="noopener noreferrer"
                   class="footer__social-link"
                   aria-label="Síguenos en Instagram">
                  <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
